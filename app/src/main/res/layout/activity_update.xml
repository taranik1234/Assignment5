<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CourseChanges"
    android:background="#CCACB7">

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="FILL THE FORM"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:textColor="#E91E1E"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Enter Course Name:"
        android:textColor="#E91E1E"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/coursename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="48dp" />
    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Enter Priority:"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#E91E1E"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="38dp" />


    <EditText
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="48dp" />
    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Enter Student Name:"
        android:textColor="#E91E1E"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/idEdtCourseTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Enter Mail Id :"
        android:textColor="#E91E1E"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="38dp" />
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="48dp" />


    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="27dp"
        android:text="Update"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:textSize="27dp"
        android:text="Delete"
        android:textAllCaps="false" />


</LinearLayout>